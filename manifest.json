{
  "manifest_version": 3,
  "name": "UdemyPlus",
  "version": "1.0",
  "description": "Extensão para progresso, metas e organização de cursos da Udemy.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://www.udemy.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.udemy.com/course/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}